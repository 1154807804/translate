/* pages/translate/translate.wxss */
page{
  width: 100%;
  height: 100%;
}
#warp{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
/* 源语言 */
#fromtext{
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx solid #f2f2f2;
  position: relative;
}
#fromtext textarea{
  overflow: hidden;
  display: block;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

#fromtext #tolanguae{
  background: #726DD1;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  z-index: 5;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50%;
  font-size: 28rpx;
  position: absolute;
  bottom: -90rpx;
  right: 140rpx;
  overflow: hidden;
}

#fromtext #trsbtn{
  background: #57D2F7;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
  z-index: 5;
  text-align: center;
  line-height: 80rpx;
  border-radius: 50%;
  font-size: 28rpx;
  position: absolute;
  bottom: -90rpx;
  right: 20rpx;
  overflow: hidden;

}

.copy{
  position: absolute;
  bottom: -80rpx;
  left: 50rpx;
  width: 60rpx;
  height: 60rpx;
  display: block;
}
.copy image{
  display: block;
  width: 100%;
  height: 100%
}
#to-text{
  background: #01aaaf;
  color: #f2f2f2;
  width: 100%;
  height: auto;
  line-height: 50rpx;
  box-sizing: border-box;
  padding: 100rpx 50rpx 50rpx ;
  font-size: 50rpx;
}
